---
// BaseLayout.astro — Base HTML shell for RKKM Law
import '../styles/global.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "RKKM Law — Trusted Counsel for Life's Most Complex Matters",
  description = 'RKKM Law brings decades of experience to the families, individuals, and executives who demand both discretion and results.',
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
