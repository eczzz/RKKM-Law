---
// Footer.astro — Site footer for RKKM Law
---

<footer class="footer">
  <div class="footer__inner">

    <!-- Top columns -->
    <div class="footer__columns">

      <!-- Brand column -->
      <div class="footer__brand">
        <span class="footer__logo">Logo</span>
        <p class="footer__tagline">
          Trusted Counsel for Life's<br />Most Complex Matters.
        </p>
      </div>

      <!-- Navigation column -->
      <div class="footer__col">
        <span class="footer__col-heading">Navigation</span>
        <nav class="footer__nav">
          <a href="/" class="footer__nav-link">Home</a>
          <a href="/about" class="footer__nav-link">About</a>
          <a href="/team" class="footer__nav-link">Our Team</a>
          <a href="/services" class="footer__nav-link">Services</a>
          <a href="/contact" class="footer__nav-link">Contact</a>
        </nav>
      </div>

      <!-- Contact column -->
      <div class="footer__col">
        <span class="footer__col-heading">Contact</span>
        <div class="footer__contact">
          <a href="mailto:info@rkkmlaw.com" class="footer__contact-link">info@rkkmlaw.com</a>
          <a href="tel:+7201234567" class="footer__contact-link">+720 123 4567</a>
          <span class="footer__contact-text">Denver, CO 80205</span>
        </div>
      </div>

    </div>

    <!-- Bottom bar -->
    <div class="footer__bottom">
      <span class="footer__copyright">&copy; 2026 RKKM Law. All rights reserved.</span>
      <a href="/contact" class="footer__cta">
        Schedule a Consultation
        <span class="footer__cta-arrow">↗</span>
      </a>
    </div>

  </div>
</footer>

<style>
  /* ============================================================
     BASE
  ============================================================ */
  .footer {
    width: 100%;
    background: #1C2E4A;
    padding: 64px 80px 40px;
    overflow: hidden;
  }

  .footer__inner {
    width: 100%;
    max-width: 1280px;
    margin: 0 auto;
  }

  /* ============================================================
     TOP COLUMNS
  ============================================================ */
  .footer__columns {
    display: grid;
    grid-template-columns: 1.4fr 1fr 1fr;
    gap: 48px;
    padding-bottom: 48px;
    border-bottom: 1px solid rgba(250, 250, 249, 0.1);
  }

  /* ── Brand ─────────────────────── */
  .footer__logo {
    font-family: 'Poppins', sans-serif;
    font-weight: 700;
    font-size: 24px;
    color: #FFFFFF;
    display: block;
    margin-bottom: 16px;
  }

  .footer__tagline {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.7;
    color: rgba(250, 250, 249, 0.4);
    max-width: 220px;
  }

  /* ── Column headings ───────────── */
  .footer__col-heading {
    display: block;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 11px;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: rgba(250, 250, 249, 0.35);
    margin-bottom: 20px;
  }

  /* ============================================================
     NAV LINKS — animated underline
  ============================================================ */
  .footer__nav {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .footer__nav-link {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 15px;
    line-height: 1;
    color: rgba(250, 250, 249, 0.7);
    text-decoration: none;
    position: relative;
    width: fit-content;
    padding-bottom: 2px;
    transition: color 0.3s ease;
  }

  .footer__nav-link::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--stone-50);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .footer__nav-link:hover {
    color: #FAFAF9;
  }

  .footer__nav-link:hover::after {
    transform: scaleX(1);
  }

  /* ============================================================
     CONTACT LINKS — translateX shift
  ============================================================ */
  .footer__contact {
    display: flex;
    flex-direction: column;
    gap: 14px;
  }

  .footer__contact-link,
  .footer__contact-text {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 15px;
    line-height: 1;
    color: rgba(250, 250, 249, 0.7);
    text-decoration: none;
    display: block;
    transition:
      color 0.3s ease,
      transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .footer__contact-link:hover {
    color: #FAFAF9;
    transform: translateX(4px);
  }

  /* ============================================================
     BOTTOM BAR
  ============================================================ */
  .footer__bottom {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding-top: 32px;
  }

  .footer__copyright {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 13px;
    color: rgba(250, 250, 249, 0.3);
  }

  /* ============================================================
     CTA BUTTON
  ============================================================ */
  .footer__cta {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 24px;
    padding: 0 16px;
    border-bottom: 1px solid var(--stone-50);
    width: fit-content;
    background: none;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: -0.02em;
    color: var(--stone-50);
    cursor: pointer;
    white-space: nowrap;
    transition: color 0.3s ease;
  }

  .footer__cta:hover {
    color: rgba(250, 250, 249, 0.75);
  }

  .footer__cta-arrow {
    font-size: 14px;
    color: var(--stone-50);
    display: inline-block;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .footer__cta:hover .footer__cta-arrow {
    transform: translate(3px, -3px);
  }

  /* ============================================================
     1200px
  ============================================================ */
  @media (max-width: 1200px) {
    .footer {
      padding: 56px 60px 36px;
    }
  }

  /* ============================================================
     1024px
  ============================================================ */
  @media (max-width: 1024px) {
    .footer {
      padding: 48px 40px 32px;
    }

    .footer__columns {
      gap: 32px;
    }
  }

  /* ============================================================
     768px — stack layout
  ============================================================ */
  @media (max-width: 768px) {
    .footer {
      padding: 48px 24px 32px;
    }

    .footer__columns {
      grid-template-columns: 1fr 1fr;
      gap: 40px 32px;
    }

    .footer__brand {
      grid-column: 1 / -1;
    }

    .footer__bottom {
      flex-direction: column;
      align-items: center;
      gap: 24px;
      padding-top: 28px;
    }
  }

  /* ============================================================
     480px
  ============================================================ */
  @media (max-width: 480px) {
    .footer {
      padding: 40px 16px 28px;
    }

    .footer__columns {
      grid-template-columns: 1fr;
      gap: 32px;
    }

    .footer__brand {
      grid-column: auto;
    }

    .footer__logo {
      font-size: 20px;
    }

    .footer__copyright {
      text-align: center;
    }
  }
</style>
