---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <!-- Hero Section: Full viewport height, header overlays on top -->
  <section class="hero">

    <!-- Background image layer -->
    <div class="hero__bg"></div>

    <!-- Dark overlay layer -->
    <div class="hero__overlay"></div>

    <!-- Content wrapper: pushes headline + body text to bottom -->
    <div class="hero__content">
      <h1 class="hero__headline">
        Trusted Counsel for Life's Most Complex Matters.
      </h1>
      <p class="hero__body">
        <span class="hero__body-lead">We make complex issues understandable.</span>
        <span class="hero__body-sub"> RKKM Law brings decades of experience
        to the families, individuals, and executives who demand both discretion and results.</span>
      </p>
    </div>

  </section>

  <!-- ============================================================ -->
  <!-- SECTION 1 — ACHIEVEMENTS BAR                                 -->
  <!-- ============================================================ -->
  <section class="achievements">
    <div class="achievements__row">

      <div class="stat-card stat-card--grow" data-anim>
        <span class="stat-card__value">30+</span>
        <span class="stat-card__label">Combined Experience</span>
      </div>

      <div class="stat-card stat-card--grow" data-anim data-delay="1">
        <span class="stat-card__value">3</span>
        <span class="stat-card__label">Colorado Super Lawyers</span>
      </div>

      <div class="stat-card stat-card--grow" data-anim data-delay="2">
        <span class="stat-card__value">100%</span>
        <span class="stat-card__label">Family Law Focus</span>
      </div>

      <div class="stat-card stat-card--fixed" data-anim data-delay="3">
        <span class="stat-card__value">2024-26</span>
        <span class="stat-card__label">Best Lawyers of America</span>
      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 2 — ABOUT US                                         -->
  <!-- ============================================================ -->
  <section class="about">
    <div class="about__inner">

      <!-- Left column -->
      <div class="about__left">

        <!-- Left-left sub-column: eyebrow + body + link -->
        <div class="about__text-col">
          <span class="about__eyebrow" data-anim>About Us</span>

          <div class="about__copy-row">
            <p class="about__body" data-anim data-delay="1">
              RKKM Law was founded on a simple belief: clients facing the most
              consequential legal matters of their lives deserve more than competent
              representation — they deserve counsel who understands what's truly at
              stake. Our attorneys bring decades of experience in high-asset divorce,
              complex custody disputes, and sophisticated family law matters for
              Colorado's most discerning clients.
            </p>

            <a href="/about" class="about__link" data-anim data-delay="2">
              Learn More
              <span class="about__link-arrow">↗</span>
            </a>
          </div>
        </div>

      </div>

      <!-- Right column: bullet list -->
      <div class="about__right">

        <div class="about__bullet" data-anim>
          <div class="about__bullet-arrow"></div>
          <span class="about__bullet-text">Exclusively focused on high-stakes family law</span>
        </div>

        <div class="about__bullet" data-anim data-delay="1">
          <div class="about__bullet-arrow"></div>
          <span class="about__bullet-text">Trial-tested attorneys with a record of results</span>
        </div>

        <div class="about__bullet" data-anim data-delay="2">
          <div class="about__bullet-arrow"></div>
          <span class="about__bullet-text">Trusted by executives, business owners, and public figures</span>
        </div>

        <div class="about__bullet" data-anim data-delay="3">
          <div class="about__bullet-arrow"></div>
          <span class="about__bullet-text">Discreet, personalized counsel from day one</span>
        </div>

      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 3 — OUR TEAM                                         -->
  <!-- ============================================================ -->
  <section class="team">
    <div class="team__inner">

      <!-- Section header row -->
      <div class="team__header">
        <span class="team__eyebrow" data-anim>Our Team</span>
        <h2 class="team__heading" data-anim data-delay="1">The Attorneys<br />Behind Your Case.</h2>
        <a href="/team" class="team__link" data-anim data-delay="2">
          Our Team
          <span class="team__link-arrow">↗</span>
        </a>
      </div>

      <!-- Row 1: 3 larger cards (Founding Partners) -->
      <div class="team__row team__row--large">

        <div class="team__card" data-anim>
          <img class="team__photo" src="/Kevin-image.webp" alt="Kevin Keyes" />
          <div class="team__info">
            <span class="team__name">Kevin Keyes</span>
            <span class="team__title--role">Founding Partner</span>
            <span class="team__title--specialty">Family Law & Alternative Dispute Resolution</span>
          </div>
        </div>

        <div class="team__card" data-anim data-delay="1">
          <img class="team__photo" src="/raj-image.webp" alt="Rajesh (Raj) Kukreja" />
          <div class="team__info">
            <span class="team__name">Rajesh (Raj) Kukreja</span>
            <span class="team__title--role">Founding Partner</span>
            <span class="team__title--specialty">High-Asset Divorce & Complex Litigation</span>
          </div>
        </div>

        <div class="team__card" data-anim data-delay="2">
          <img class="team__photo" src="/kyle-image.webp" alt="Kyle McFarlane" />
          <div class="team__info">
            <span class="team__name">Kyle McFarlane</span>
            <span class="team__title--role">Founding Partner</span>
            <span class="team__title--specialty">Trial Advocacy & High-Conflict Family Law</span>
          </div>
        </div>

      </div>

      <!-- Row 2: 4 smaller cards (Associates & Staff) -->
      <div class="team__row team__row--small">

        <div class="team__card" data-anim>
          <img class="team__photo" src="/Placeholder-bio-1.webp" alt="Albert Flores" />
          <div class="team__info team__info--small">
            <span class="team__name">Albert Flores</span>
            <span class="team__title team__title--staff">Senior Associate Attorney</span>
          </div>
        </div>

        <div class="team__card" data-anim data-delay="1">
          <img class="team__photo" src="/Placeholder-bio-2.webp" alt="Cameron Williamson" />
          <div class="team__info team__info--small">
            <span class="team__name">Cameron Williamson</span>
            <span class="team__title team__title--staff">Associate Attorney</span>
          </div>
        </div>

        <div class="team__card" data-anim data-delay="2">
          <img class="team__photo" src="/Placeholder-bio-3.webp" alt="Jenny Wilson" />
          <div class="team__info team__info--small">
            <span class="team__name">Jenny Wilson</span>
            <span class="team__title team__title--staff">Paralegal</span>
          </div>
        </div>

        <div class="team__card" data-anim data-delay="3">
          <img class="team__photo" src="/Placeholder-bio-4.webp" alt="Theresa Webb" />
          <div class="team__info team__info--small">
            <span class="team__name">Theresa Webb</span>
            <span class="team__title team__title--staff">Legal Assistant</span>
          </div>
        </div>

      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 4 — SERVICES                                         -->
  <!-- ============================================================ -->
  <section class="services">
    <div class="services__inner">

      <!-- Left column -->
      <div class="services__left">
        <span class="services__eyebrow" data-anim>Services</span>
        <p class="services__body" data-anim data-delay="1">
          RKKM Law handles the full spectrum of family law matters — from complex
          asset division to high-conflict custody — with the discretion and rigor
          your situation demands.
        </p>
        <a href="/services" class="services__link" data-anim data-delay="2">
          Learn More
          <span class="services__link-arrow">↗</span>
        </a>
      </div>

      <!-- Right column: service accordion rows -->
      <div class="services__right">

        <!-- Row 1 — expanded by default -->
        <div class="services__row services__row--expanded" data-anim>
          <div class="services__arrow"></div>
          <div class="services__row-text">
            <span class="services__row-title">High-Asset Divorce</span>
            <div class="services__desc-wrap">
              <p class="services__row-desc">
                Representing individuals with significant marital estates through every
                stage of dissolution, including business valuations, property division,
                executive compensation analysis, and enforcement of marital agreements.
              </p>
            </div>
          </div>
          <div class="services__plus">
            <div class="services__plus-v"></div>
            <div class="services__plus-h"></div>
          </div>
        </div>

        <!-- Row 2 -->
        <div class="services__row" data-anim data-delay="1">
          <div class="services__arrow"></div>
          <div class="services__row-text">
            <span class="services__row-title">Child Custody &amp; Parenting</span>
            <div class="services__desc-wrap">
              <p class="services__row-desc">
                Strategic, compassionate representation in contested custody matters,
                parenting plan disputes, relocation cases, and modifications to existing orders.
              </p>
            </div>
          </div>
          <div class="services__plus">
            <div class="services__plus-v"></div>
            <div class="services__plus-h"></div>
          </div>
        </div>

        <!-- Row 3 -->
        <div class="services__row" data-anim data-delay="2">
          <div class="services__arrow"></div>
          <div class="services__row-text">
            <span class="services__row-title">Spousal Support &amp; Maintenance</span>
            <div class="services__desc-wrap">
              <p class="services__row-desc">
                Skilled advocacy in the determination, modification, and enforcement of
                spousal maintenance for clients on both sides of the negotiation.
              </p>
            </div>
          </div>
          <div class="services__plus">
            <div class="services__plus-v"></div>
            <div class="services__plus-h"></div>
          </div>
        </div>

        <!-- Row 4 -->
        <div class="services__row" data-anim data-delay="3">
          <div class="services__arrow"></div>
          <div class="services__row-text">
            <span class="services__row-title">Mediation &amp; Alternative Dispute Resolution</span>
            <div class="services__desc-wrap">
              <p class="services__row-desc">
                Confidential, efficient resolution of family law matters outside of court —
                led by attorneys with formal ADR training and decades of negotiation experience.
              </p>
            </div>
          </div>
          <div class="services__plus">
            <div class="services__plus-v"></div>
            <div class="services__plus-h"></div>
          </div>
        </div>

      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 5 — TESTIMONIALS                                     -->
  <!-- ============================================================ -->
  <section class="testimonials">
    <div class="testimonials__inner">

      <!-- Section header -->
      <div class="testimonials__header">
        <span class="testimonials__eyebrow" data-anim>Testimonials</span>
        <h2 class="testimonials__heading" data-anim data-delay="1">What Our Clients Say</h2>
      </div>

      <!-- Carousel -->
      <div class="testimonials__carousel-wrapper" data-anim data-delay="2">
        <div class="testimonials__track">

          <!-- Card 1 -->
          <div class="testimonials__card">
            <p class="testimonials__quote">"Raj handled every detail of my case with a level of precision and discretion I didn't know was possible. I never felt like just another client."</p>
            <div class="testimonials__attribution">
              <span class="testimonials__name">Michael T., Denver</span>
            </div>
          </div>

          <!-- Card 2 -->
          <div class="testimonials__card">
            <p class="testimonials__quote">"Kyle is the most prepared attorney I have ever worked with. She understood the complexity of our situation immediately and never once made me feel overwhelmed."</p>
            <div class="testimonials__attribution">
              <span class="testimonials__name">Sarah K., Boulder</span>
            </div>
          </div>

          <!-- Card 3 -->
          <div class="testimonials__card">
            <p class="testimonials__quote">"I was referred to this firm by my financial advisor and I understand why. They operate at a completely different level than anyone else I consulted."</p>
            <div class="testimonials__attribution">
              <span class="testimonials__name">David R., Cherry Creek</span>
            </div>
          </div>

          <!-- Card 4 -->
          <div class="testimonials__card">
            <p class="testimonials__quote">"When your family and your finances are both on the line, you need someone who understands both. RKKM brought a level of expertise and care I simply couldn't have found anywhere else."</p>
            <div class="testimonials__attribution">
              <span class="testimonials__name">James P., Greenwood Village</span>
            </div>
          </div>

        </div>
      </div>

      <!-- Mobile arrows + Progress bar -->
      <div class="testimonials__controls" data-anim data-delay="3">
        <button class="testimonials__arrow testimonials__arrow--prev" aria-label="Previous testimonial">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none"><path d="M12.5 15L7.5 10L12.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
        <div class="testimonials__progress">
          <div class="testimonials__progress-track">
            <div class="testimonials__progress-fill"></div>
          </div>
        </div>
        <button class="testimonials__arrow testimonials__arrow--next" aria-label="Next testimonial">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none"><path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 6 — MID-PAGE CTA BANNER                             -->
  <!-- ============================================================ -->
  <section class="cta-banner">

    <!-- Background image layer -->
    <div class="cta-banner__bg"></div>

    <!-- Dark shade overlay -->
    <div class="cta-banner__overlay"></div>

    <!-- Content -->
    <div class="cta-banner__content">

      <!-- Top row: headline -->
      <div class="cta-banner__top">
        <h2 class="cta-banner__headline" data-anim>
          When the Stakes Are High, Experience Is Everything.
        </h2>
      </div>

      <!-- Bottom row: subtext + CTA -->
      <div class="cta-banner__bottom">
        <p class="cta-banner__subtext" data-anim data-delay="1">
          RKKM Law represents clients who cannot afford the wrong outcome. If you've been referred to us, we're ready to listen.
        </p>
        <a href="/contact" class="cta-banner__link" data-anim data-delay="2">
          Schedule a Consultation
          <span class="cta-banner__link-arrow">↗</span>
        </a>
      </div>

    </div>
  </section>

  <!-- ============================================================ -->
  <!-- SECTION 7 — CONTACT US                                       -->
  <!-- ============================================================ -->
  <section class="contact">
    <div class="contact__inner">

      <!-- Left column: form -->
      <div class="contact__left">

        <div class="contact__header">
          <span class="contact__eyebrow" data-anim>Get In Touch</span>
          <h2 class="contact__heading" data-anim data-delay="1">Contact Us</h2>
          <p class="contact__subtext" data-anim data-delay="2">Your matter is confidential. Reach out to schedule a consultation and one of our attorneys will be in touch shortly.</p>
        </div>

        <div class="contact__fields" data-anim data-delay="3">
          <input class="contact__input" type="text" placeholder="Full Name*" />
          <input class="contact__input" type="text" placeholder="Phone Number*" />
          <input class="contact__input" type="email" placeholder="Email Address*" />
          <input class="contact__input" type="text" placeholder="Message*" />
        </div>

        <div class="contact__submit" data-anim data-delay="4">
          Request A Consultation
          <span class="contact__submit-arrow">↗</span>
        </div>

      </div>

      <!-- Right column: contact info panel -->
      <div class="contact__right" data-anim data-delay="2">

        <h3 class="contact__info-heading">Contact Information</h3>

        <div class="contact__info-rows">

          <div class="contact__info-row">
            <div class="contact__icon-box">
              <i class="contact__icon fa-solid fa-envelope"></i>
            </div>
            <span class="contact__info-text">info@rkkmlaw.com</span>
          </div>

          <div class="contact__info-row">
            <div class="contact__icon-box">
              <i class="contact__icon fa-solid fa-phone"></i>
            </div>
            <span class="contact__info-text">+720 123 4567</span>
          </div>

          <div class="contact__info-row">
            <div class="contact__icon-box">
              <i class="contact__icon fa-solid fa-location-dot"></i>
            </div>
            <span class="contact__info-text">Office Address TBD Denver, CO 80205</span>
          </div>

          <div class="contact__info-row">
            <div class="contact__icon-box">
              <i class="contact__icon fa-solid fa-clock"></i>
            </div>
            <span class="contact__info-text">Monday - Friday; 8:00am - 5:00pm</span>
          </div>

        </div>

        <div class="contact__divider"></div>

      </div>

    </div>
  </section>

</BaseLayout>

<style>
  /* ============================================================
     HERO
  ============================================================ */
  .hero {
    width: 100%;
    height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 56px 80px;
    gap: 8px;
    isolation: isolate;
    background: #FFFFFF;
  }

  .hero__bg {
    position: absolute;
    inset: 10px;
    background-image: url('/home-page-hero-bg.webp');
    background-size: cover;
    background-position: center;
    z-index: 0;
  }

  .hero__overlay {
    position: absolute;
    inset: 10px;
    background: #0C0A09;
    opacity: 0.3;
    z-index: 1;
  }

  .hero__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: flex-end;
    width: 100%;
    height: 702px;
    margin-top: auto;
  }

  .hero__headline {
    max-width: 819px;
    font-family: 'Poppins', sans-serif;
    font-weight: 300;
    font-size: 70px;
    line-height: 110%;
    letter-spacing: -0.03em;
    color: var(--stone-50);
  }

  .hero__body {
    width: 380px;
    font-family: 'Poppins', sans-serif;
    font-size: 18px;
    line-height: 27px;
    letter-spacing: -0.02em;
    color: var(--stone-50);
    opacity: 0.8;
    flex-shrink: 0;
  }

  .hero__body-lead {
    font-weight: 600;
  }

  .hero__body-sub {
    font-weight: 300;
    opacity: 0.55;
  }

  /* ============================================================
     SECTION 1 — ACHIEVEMENTS BAR
  ============================================================ */
  .achievements {
    width: 100%;
    background: #FAFAF9;
    padding: 40px 80px;
  }

  .achievements__row {
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 24px;
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
  }

  .stat-card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    padding: 24px 0px;
    gap: 8px;
    border-bottom: 1px solid #78716C;
    position: relative;
    transition: border-color 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }

  /* Navy sweep line grows left → right over the stone border on hover */
  .stat-card::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 1px;
    background: #1C2E4A;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.55s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .stat-card:hover::after {
    transform: scaleX(1);
  }

  .stat-card--grow {
    flex-grow: 1;
  }

  .stat-card--fixed {
    width: 300px;
    flex-shrink: 0;
  }

  .stat-card__value {
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 40px;
    line-height: 110%;
    letter-spacing: -0.03em;
    color: #1C2E4A;
    display: inline-block;
    transition: transform 0.45s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .stat-card:hover .stat-card__value {
    transform: translateY(-4px);
  }

  .stat-card__label {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 24px;
    line-height: 140%;
    letter-spacing: -0.03em;
    color: #78716C;
    transition: color 0.35s ease;
  }

  .stat-card:hover .stat-card__label {
    color: #1C2E4A;
  }

  /* ============================================================
     SECTION 2 — ABOUT US
  ============================================================ */
  .about {
    width: 100%;
    background: #FAFAF9;
    padding: 40px 80px;
    min-height: 755px;
    overflow: hidden;
  }

  .about__inner {
    max-width: 1280px;
    margin: 0 auto;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: stretch;
  }

  /* Left column */
  .about__left {
    width: 872px;
    flex-shrink: 0;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    gap: 72px;
  }

  .about__text-col {
    width: 600px;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 13px;
  }

  .about__eyebrow {
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 16px;
    line-height: 24px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: #78716C;
  }
  .about__eyebrow:hover { color: #1C2E4A; letter-spacing: 0.14em; }

  .about__copy-row {
    display: flex;
    flex-direction: row;
    align-items: flex-end;
    gap: 24px;
    width: 100%;
  }

  .about__body {
    font-family: 'Poppins', sans-serif;
    font-weight: 400;
    font-size: 24px;
    line-height: 140%;
    letter-spacing: -0.03em;
    color: #0C0A09;
    flex: 1;
  }

  .about__link {
    display: flex;
    flex-direction: row;
    align-items: center;
    gap: 24px;
    padding: 0px 16px;
    border-bottom: 1px solid #1C2E4A;
    width: fit-content;
    text-decoration: none;
    font-family: 'Poppins', sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 21px;
    letter-spacing: -0.02em;
    color: #1C1917;
    transition: color 0.3s ease;
  }

  .about__link:hover {
    color: #1C2E4A;
  }

  .about__link-arrow {
    font-size: 14px;
    color: #1C2E4A;
    display: inline-block;
    transition: transform 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .about__link:hover .about__link-arrow {
    transform: translate(3px, -3px);
  }

  /* Right column */
  .about__right {
    width: 408px;
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    padding: 24px 0px;
    gap: 104px;
    border-left: 1px solid #78716C;
    height: 675px;
  }

  .about__bullet {
    display: flex;
    flex-direction: row;
    align-items: center;
    padding-left: 40px;
    gap: 24px;
    width: 100%;
  }

  .about__bullet-arrow {
    width: 52px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    position: relative;
    height: 2px;
    background-color: #A5B4A0;
    transform-origin: left center;
    will-change: transform;
    transition: transform 0.45s cubic-bezier(0.16, 1, 0.3, 1), background-color 0.35s ease;
  }

  .about__bullet:hover .about__bullet-arrow {
    transform: scaleX(1.38);
    background-color: #1C2E4A;
  }

  .about__bullet-arrow::after {
    content: '';
    position: absolute;
    right: -1px;
    top: 50%;
    transform: translateY(-50%);
    border-top: 5px solid transparent;
