<script>
  const rows = document.querySelectorAll('.services__row');
  rows.forEach(row => {
    row.addEventListener('click', () => {
      const isExpanded = row.classList.contains('services__row--expanded');
      rows.forEach(r => r.classList.remove('services__row--expanded'));
      if (!isExpanded) {
        row.classList.add('services__row--expanded');
      }
    });
  });

  // Testimonials carousel — infinite loop via cloned cards
  const testimonialsTrack = document.querySelector('.testimonials__track') as HTMLElement | null;
  const testimonialsWrapper = document.querySelector('.testimonials__carousel-wrapper') as HTMLElement | null;
  const progressFill = document.querySelector('.testimonials__progress-fill') as HTMLElement | null;
  const TOTAL_CARDS = 4;

  // Build 12-card track: [clones-pre][real 0-3][clones-post]
  const originalCards = Array.from(testimonialsTrack?.children ?? []) as HTMLElement[];
  // Prepend clones so backward scroll has cards to reveal
  [...originalCards].reverse().forEach(card => {
    testimonialsTrack?.insertBefore(card.cloneNode(true), testimonialsTrack.firstChild);
  });
  // Append clones so forward scroll has cards to reveal
  originalCards.forEach(card => {
    testimonialsTrack?.appendChild(card.cloneNode(true));
  });

  // virtualIndex 4–7 = real cards; 0–3 = pre-clones; 8–11 = post-clones
  let virtualIndex = TOTAL_CARDS;

  // Read actual card dimensions at call time so responsive CSS is respected
  function getCardMetrics(): { cardOnly: number; cardWidth: number } {
    const cardOnly = originalCards[0]?.offsetWidth ?? 580;
    return { cardOnly, cardWidth: cardOnly + 24 };
  }

  function getCenterOffset(): number {
    if (!testimonialsWrapper) return 0;
    return (testimonialsWrapper.offsetWidth - getCardMetrics().cardOnly) / 2;
  }

  function applyPosition(index: number, animate: boolean) {
    if (!testimonialsTrack) return;
    if (!animate) testimonialsTrack.style.transition = 'none';
    testimonialsTrack.style.transform = `translateX(${getCenterOffset() - index * getCardMetrics().cardWidth}px)`;
    if (!animate) {
      requestAnimationFrame(() => requestAnimationFrame(() => {
        if (testimonialsTrack) testimonialsTrack.style.transition = '';
      }));
    }
  }

  function updateProgress(logicalCard: number) {
    if (progressFill) progressFill.style.width = ((logicalCard + 1) / TOTAL_CARDS * 100) + '%';
  }

  function step(direction: number) {
    virtualIndex += direction;
    const logicalCard = ((virtualIndex - TOTAL_CARDS) % TOTAL_CARDS + TOTAL_CARDS) % TOTAL_CARDS;
    applyPosition(virtualIndex, true);
    updateProgress(logicalCard);
    // After animation completes, silently snap from clone back to real equivalent
    setTimeout(() => {
      if (virtualIndex >= TOTAL_CARDS * 2) {
        virtualIndex -= TOTAL_CARDS;
        applyPosition(virtualIndex, false);
      } else if (virtualIndex < TOTAL_CARDS) {
        virtualIndex += TOTAL_CARDS;
        applyPosition(virtualIndex, false);
      }
    }, 420);
  }

  function jumpToLogical(logicalCard: number) {
    virtualIndex = TOTAL_CARDS + logicalCard;
    applyPosition(virtualIndex, true);
    updateProgress(logicalCard);
  }

  // Init
  applyPosition(virtualIndex, false);
  updateProgress(0);

  // Mobile arrow buttons
  document.querySelector('.testimonials__arrow--prev')?.addEventListener('click', () => step(-1));
  document.querySelector('.testimonials__arrow--next')?.addEventListener('click', () => step(1));

  // Progress bar click
  document.querySelector('.testimonials__progress-track')?.addEventListener('click', (e) => {
    const me = e as MouseEvent;
    const rect = (me.currentTarget as HTMLElement).getBoundingClientRect();
    const ratio = (me.clientX - rect.left) / rect.width;
    jumpToLogical(Math.floor(ratio * TOTAL_CARDS));
  });

  // Drag to navigate
  let dragStartX = 0;
  let isDragging = false;

  testimonialsTrack?.addEventListener('mousedown', (e) => {
    dragStartX = (e as MouseEvent).clientX;
    isDragging = true;
  });

  document.addEventListener('mouseup', (e) => {
    if (!isDragging) return;
    isDragging = false;
    const diff = dragStartX - (e as MouseEvent).clientX;
    if (Math.abs(diff) > 50) step(diff > 0 ? 1 : -1);
  });

  // Touch swipe navigation
  let touchStartX = 0;
  testimonialsTrack?.addEventListener('touchstart', (e) => {
    touchStartX = (e as TouchEvent).touches[0].clientX;
  }, { passive: true });

  testimonialsTrack?.addEventListener('touchend', (e) => {
    const diff = touchStartX - (e as TouchEvent).changedTouches[0].clientX;
    if (Math.abs(diff) > 50) step(diff > 0 ? 1 : -1);
  }, { passive: true });

  // Arrow key navigation
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowRight') step(1);
    if (e.key === 'ArrowLeft') step(-1);
  });

  // Mouse wheel navigation
  let wheelCooldown = false;
  testimonialsWrapper?.addEventListener('wheel', (e) => {
    e.preventDefault();
    if (wheelCooldown) return;
    wheelCooldown = true;
    const we = e as WheelEvent;
    step(we.deltaX > 0 || we.deltaY > 0 ? 1 : -1);
    setTimeout(() => { wheelCooldown = false; }, 500);
  }, { passive: false });

  // Reposition on resize so dynamic card dimensions stay accurate
  window.addEventListener('resize', () => {
    applyPosition(virtualIndex, false);
  });

  // Scroll entry animations — IntersectionObserver
  const animEls = document.querySelectorAll('[data-anim]');
  const animObserver = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        (entry.target as HTMLElement).classList.add('is-visible');
        animObserver.unobserve(entry.target);
      }
    });
  }, { threshold: 0.12, rootMargin: '0px 0px -32px 0px' });

  animEls.forEach(el => animObserver.observe(el));
</script>
